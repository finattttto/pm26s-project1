<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FAFAFA">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:text="Início"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:hint="Digite a latitude"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:backgroundTint="#6200EE"
        android:textColor="#333333"
        android:textColorHint="#888888" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:textSize="16sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etLongitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|numberDecimal"
        android:hint="Digite a longitude"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:backgroundTint="#6200EE"
        android:textColor="#333333"
        android:textColorHint="#888888" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Endereço"
        android:onClick="btVerEnderecoOnClick"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:backgroundTint="#03A9F4"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Mapa"
        android:onClick="btVerMapaOnClick"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:text="@string/galeria"
        android:onClick="btGoToGaleryOnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:text="@string/configura_es"
        android:onClick="btGoToCfgOnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />
</LinearLayout>