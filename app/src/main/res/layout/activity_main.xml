<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@drawable/ic_location"
        android:paddingStart="16dp"
        android:text="Meus Pontos Turisticos"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        android:onClick="btVerEnderecoOnClick"
        android:padding="12dp"
        android:text="Ver EndereÃ§o"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_my_location" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:onClick="btVerMapaOnClick"
        android:padding="12dp"
        android:text="Ver Mapa"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_map" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:onClick="btGoToGaleryOnClick"
        android:padding="12dp"
        android:text="@string/galeria"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_gallery" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:onClick="btGoToCamera"
        android:padding="12dp"
        android:text="Tirar Foto"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_camera" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:onClick="btGoToCfgOnClick"
        android:padding="12dp"
        android:text="@string/configura_es"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:drawableLeft="@drawable/ic_settings" />
</LinearLayout>